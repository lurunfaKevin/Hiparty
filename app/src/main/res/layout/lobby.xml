<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/shiftmenu"
        android:id="@+id/include"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lobby_bg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/include">

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/lobby_jo"

            android:id="@+id/lobby_bt_join"
            android:layout_marginRight="56dp"
            android:layout_marginEnd="56dp"
            android:layout_marginBottom="88dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/lobby_cre"

            android:id="@+id/lobby_bt_create"
            android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp"
            android:layout_marginBottom="99dp"
            android:layout_alignBottom="@+id/lobby_bt_join"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>

