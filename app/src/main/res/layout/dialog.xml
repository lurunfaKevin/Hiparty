<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/dialog_framMid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/dialog_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="asagdsgsdsdgds"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/dialog_tv_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="hrehwetwetwetew"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_framLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/dialog_im_sys"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            />

        <TextView
            android:id="@+id/dialog_tv_sysnews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="fgrfasfhaskjfhaskjfhaskjfhakjshfjktsh"
            android:textSize="18sp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_framRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/dialog_tv_usernews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"

            android:text="ewtwetwetyweasfsafsafasfasrt"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/dialog_im_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom"
            />

    </LinearLayout>

</RelativeLayout>